eval $r=1

## INLINE: sim
sim-simple parameters/simple-1.params 0 /override=k1=%{$r*2};km1=%{$r} /stepper=${1:-rkf45}
## INLINE END

## INLINE: test-one-scaling
eval $r/=2
generate-dataset 0 10
apply-formula x/=$r

@ inline:sim
apply-formula 'y-= (2.0/3.0) * exp(-3*x*$r) + 1/3.0'
assert '$stats["y_norm"]' 5e-11

@ inline:sim bsimp
apply-formula 'y-= (2.0/3.0) * exp(-3*x*$r) + 1/3.0'
assert '$stats["y_norm"]' 5e-11

## INLINE END

run-for-each inline:test-one-scaling /range-type=lin 0..1:40
